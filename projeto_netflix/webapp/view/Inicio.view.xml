<mvc:View 
    controllerName="projetonetflix.controller.Inicio"
    xmlns:mvc="sap.ui.core.mvc" 
    displayBlock="true"
    xmlns="sap.m"
    xmlns:layout="sap.ui.layout"
    >
    <Page id="page" title="{i18n>title}">

        <subHeader>
            <Toolbar id="_IDGenToolbar1" >
                <Link id="_IDGenLink1" text="Inicio" press="onPressLinkInicio"/>
                <Link id="_IDGenLink2" text="Series" press="onPressLinkSeries"/>
                <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                <SearchField id="_IDGenSearchField1" width="30%">
                
                </SearchField>

            </Toolbar>
        </subHeader>

        <content>
            <layout:Grid id="_IDGenGrid1" content="{ArquivoNetflix>/titles}">

                <VBox id="_IDGenVBox1" class="preenchimentoBox" width="300px" height="350px"> <!---->
                    <Image id="_IDGenImage2" src="{ArquivoNetflix>jawSummary/logoImage/url}"        width="70%" height="70%"/>
                    <Image id="_IDGenImage1" src="{ArquivoNetflix>jawSummary/backgroundImage/url}"  width="100%" height="100%"/>
                    
                    <Text id="_IDGenText1" class="corTextoBox rodapeTexto" text="{ArquivoNetflix>jawSummary/title}" />
                    <Text id="_IDGenText5" class="corTextoBox rodapeTexto" text="{ArquivoNetflix>jawSummary/numSeasonsLabel}" />
                    <Text id="_IDGenText2" class="corTextoBox rodapeTexto" text="{ArquivoNetflix>jawSummary/synopsis}" />
                    <Text id="_IDGenText3" class="corTextoBox rodapeTexto" text="{ArquivoNetflix>jawSummary/genres/1/name}" />
                    <Text id="_IDGenText4" class="corTextoBox rodapeTexto" text="{ArquivoNetflix>jawSummary/genres/2/name}" />
                </VBox>

            </layout:Grid>

        </content>
    </Page>
</mvc:View>
